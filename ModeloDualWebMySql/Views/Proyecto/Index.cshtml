@model List<ModeloDualWebMySql.Models.Proyecto>
@{
    ViewData["Title"] = "Proyectos";
}
<h1 class="mb-2">Proyectos</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Añadir proyecto</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Código proyecto</th>
            <th>Nombre proyecto</th>
            <th>Código empresa</th>
            <th>Matrícula alumno</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empresa in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m=>empresa.CodigoProyecto)</td>
                <td>@Html.DisplayFor(m=>empresa.NombreProyecto)</td>
                <td>@Html.DisplayFor(m=>empresa.CodigoEmpresa)</td>
                <td>@Html.DisplayFor(m=>empresa.Matricula)</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@empresa.IdProyecto" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@empresa.IdProyecto" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>